{
    "manifest_version": 2,
    "name": "Tab Swoosher",
    "version": "1.1.3",
    "author": "encadyma",
    "description": "A simple tab cleaner WebExtension. Quickly keep your browser space clean.",
    
    "applications": {
        "gecko": {
            "id": "chronos@encadyma.com",
            "strict_min_version": "57.0"
        }
    },
    
    "icons": {
        "48": "icons/icon.png"
    },
    
    "permissions": [
        "<all_urls>",
        "tabs",
        "storage",
        "unlimitedStorage",
        "topSites"
    ],
    
    "background": {
        "scripts": ["background/background.js"]
    },
    
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true,
        "browser_style": false
    },
    
    "browser_action": {
        "default_icon": "icons/tab_matds.png",
        "default_title": "Tab Swoosher",
        "default_popup": "popup/popup.html",
        "browser_style": false
    }
}